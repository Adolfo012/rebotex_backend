# Variables de entorno para ReboteX Backend

# Puerto del servidor (Railway asigna automáticamente)
PORT=3000

# Configuración de la base de datos PostgreSQL
## Opción A (recomendada con Supabase): usar cadena de conexión completa
# DATABASE_URL=postgresql://usuario:password@host:5432/base?sslmode=require
# DB_SSL=true

## Opción B: variables separadas (para Postgres local)
DB_HOST=your_database_host
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# Clave secreta para JWT (usar una clave segura en producción)
JWT_SECRET=your_jwt_secret_key

# Configuración del entorno
NODE_ENV=production

# URL del servicio de ML (FastAPI)
ML_SERVICE_URL=http://localhost:8001